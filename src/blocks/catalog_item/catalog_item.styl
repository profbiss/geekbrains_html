.catalog_item
    width: 260px
    height: 360px
    margin-bottom: 40px
    margin-right: auto
    &__link:hover
        text-decoration: none
    &:hover
        box-shadow: 0px 5px 8px 0px rgba(0, 0, 0, 0.16)
    &__overlay
        position: relative
        ^[-1]:hover &:after
            position: absolute
            display: block
            content: " "
            width: 262px
            height: 282px
            top: 0
            left: 0
            background: rgba(58, 56, 56, 0.83)
            z-index: 1
    &__add_to_cart
        display: none
        background: url(../img/cart-white.png) 10px 9px no-repeat
        text-transform: none
        position: absolute
        top: 81px
        left: 55px
        height: 37px
        border: 1px solid #fff
        width: 120px
        text-align: center
        line-height: 38px
        color: #fff
        z-index: 2
        padding-left: 30px
        text-decoration: none
        font-size: 13px
        font-weight: 700
        margin-top: 20px
        margin-left: 15px
        ^[-1]:hover &
            display: block
    &__name
        color: #222
        font-size: 13px
        font-weight: 700
        text-transform: uppercase
        margin-top: 20px
        display: block
        margin-left: 15px
    &__price
        @extend .catalog_item__name
        color: #f16d7f
        margin-top: 14px
        font-size: 16px