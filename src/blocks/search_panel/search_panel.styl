.search_panel
    width: 412px
    height: 38px
    align-items: center
    margin: auto 0 auto 38px
    display: flex
    &__select
        font-size: 14px
        display: block
        padding: 10px 7px 10px 14px
        box-sizing: border-box
        width: 87px
        height: 38px
        color: #222
        border: 1px solid #e6e6e6
        border-top-left-radius: 3px
        border-bottom-left-radius: 3px
        background: linear-gradient(180deg, #f9f9f9 0%, #f5f5f5 100%)
        .ui-selectmenu-text
            display: block
            position: relative
            width: 55px
            overflow: hidden
            float: left
        .ui-selectmenu-icon
            margin: auto
            display: block
            float: right
            line-height: 11px
        &_list_items
            display: none
            position: absolute
            border: 1px solid #ccc
            background: #fff
            list-style: none
            padding: 15px 0 15px 20px
            border-radius: 5px;
            box-shadow: 0 0 10px 0 rgba(0,0,0,.17);
            margin: 0 0 0 -20px
            width: 200px !important
            z-index: 10
            .ui-selectmenu-optgroup
                font-size: 1.5rem
            .ui-menu-item:hover
                padding-left: 10px
        ^[-1] .ui-selectmenu-open &_list_items
            display: block
    &__input
        box-sizing: border-box
        width: 279px
        height: 38px
        padding-left: 15px
        padding-right: 15px
        border: 1px solid #e6e6e6
        border-right: 0
        border-left: 0
        background-color: #fff
    &__button
        font-size: 14px
        font-weight: 400
        line-height: 32px
        box-sizing: border-box
        width: 38px
        height: 38px
        padding-right: 10px
        text-align: right
        color: #a4a4a4
        border: 1px solid #e6e6e6
        border-top-right-radius: 3px
        border-bottom-right-radius: 3px
        background-color: #fff