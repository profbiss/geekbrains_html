.subscribe
    height: 420px
    margin-top: 80px
    background: url("../img/subscribe.jpg")
    background-size: 100%
    background-position: bottom
    .wrapper
        height: 100%
    &__left, &__right
        display: flex
        width: 50%
    &__left
        flex-direction: row
        border-right: 1px solid #dedede
    &__right
        flex-direction: column
    &__avatar
        height: fit-content
        margin: auto
    &__quote
        margin: auto
        margin-left: 30px
        margin-right: 50px
        position: relative
        & > *
            font-weight: 700
            display: block
            line-height: 26px
            font-style: normal
        &__text
            color: rgba(34, 34, 36, 0.67)
            font-size: 15px
            font-style: italic
        &__name
            color: #f16d7f
            font-size: 16px
        &__ph
            color: #222224
            font-size: 12px
            line-height: 14px
        &:after
            content: " "
            display: block
            position: absolute
            width: 100%
            height: 10px
            background: url(../img/dash.png) no-repeat
            bottom: -30px
    &__text
        margin: auto 0 0 0
        color:  #222224
        font-size: 14px
        font-weight: 400
        line-height: 24px
        text-align: center
        text-transform: uppercase
        b
            font-size: 24px
            display: block
    &__form
        margin: 30px auto auto auto
        & > *
            border: 0px
            height: 46px
    &__email
        border-top-left-radius: 23px
        border-bottom-left-radius: 23px
        background: #e1e1e1
        padding: 0 15px
        width: 280px
    &__submit
        background: #f16d7f
        border-bottom-right-radius: 23px
        border-top-right-radius: 23px
        color: #fff
        width: 100px